<%= form_with(model: tasklist2, local: true) do |f| %>
  
   <% if tasklist2.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% tasklist2.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
   <%= f.label :status,"状態" %>
  <%= f.text_field :status %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit '投稿' %>
<% end %>